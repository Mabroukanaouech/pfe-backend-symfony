{% extends 'base.html.twig' %}

{% block title %}Publicity index{% endblock %}

{% block body %}
    <h1>Publicity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Audience</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publicity in publicities %}
            <tr>
                <td>{{ publicity.id }}</td>
                <td>{{ publicity.name }}</td>
                <td>{{ publicity.description }}</td>
                <td>{{ publicity.audience }}</td>
                <td>
                    <a href="{{ path('publicity_show', {'id': publicity.id}) }}">show</a>
                    <a href="{{ path('publicity_edit', {'id': publicity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('publicity_new') }}">Create new</a>
{% endblock %}
